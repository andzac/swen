{
    "name": "SWAN News checker",
    "description" : "Newst fakeness checker",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "declarativeContent"],
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": "logo.png"
    },
    "content_scripts": [{
        "matches": ["*://*/*"],
        "js": ["content.js"]
    }],
    "background": {
        "scripts": ["main.js"],
        "persistent": false
    },
    "manifest_version": 2
}